---
import '@/styles/global.css';
import '@/assets/fonts/inter.css';
import { getImage } from 'astro:assets';
import Container from '@/components/Container.astro';
import SeoMeta from '@/assets/images/meta.jpg';
import { ChevronRightIcon } from 'lucide-react';

const analytics = import.meta.env.ENABLED_ANALYTICS || false;

const image = await getImage({ src: SeoMeta, format: 'png'});
const seoImage = `https://basesdedatos.dev${image.src}`;
---
<html lang="es" class="min-h-full antialiased selection:bg-accent-300 selection:text-accent-900">
  <head>
		<meta charset="utf-8" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Curso gratis de base de datos desde cero con PostgreSQL</title>
    <meta name="keywords" content="sql, bases de datos, postgresql, cursos, cursos en español, curso de bases de datos, curso gratis de postgres, aprende postgres, postgres, curso de bases de datos gratis, curso sql desde cero, sql aprender, aprender sql, curso de bases de datos sql, taller de bases de datos" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Curso gratis de base de datos desde cero con PostgreSQL" />
    <meta property="og:description" content="Descubre el poder de las bases de datos relacionales y aprende a trabajar con SQL para almacenar, filtrar, organizar y manipular información." />
    <meta property="og:image" content={seoImage} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://basesdedatos.dev/" />
    <meta property="twitter:creator" content="@coderdiaz" />
    <meta property="twitter:title" content="Curso gratis de base de datos desde cero con PostgreSQL" />
    <meta property="twitter:description" content="Descubre el poder de las bases de datos relacionales y aprende a trabajar con SQL para almacenar, filtrar, organizar y manipular información." />
    <meta property="twitter:image" content={seoImage} />
    { analytics && (
      <script is:inline defer data-domain="basesdedatos.dev" src="https://analy.cc/js/script.js"></script>
    )}
	</head>
  <body class="font-sans leading-relaxed h-full flex flex-col">
    <header class="bg-[#F7F9FC]">
      <Container>
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2 md:gap-3 pt-8">
          <a href="/" class="flex items-center gap-2">
            <span class="font-semibold text-base lg:text-lg">Aprende bases de datos</span>
          </a>
          <nav class="flex items-center text-sm gap-6 gap-y-1 flex-wrap">
            <a class="relative text-gray-400 font-medium" href="#">
              Guías
            </a>
            <a class="relative text-gray-400 font-medium" href="#">
              Ejercicios
            </a>
            <a class="relative text-gray-400 font-medium" href="#">
              Artículos
            </a>
          </nav>
        </div>
      </Container>
    </header>
    <main class="h-full flex-grow">
      <slot />
    </main>
    <footer>
      <Container>
        <div class="flex flex-col gap-8 pt-16 pb-20">
          <p class="font-medium text-gray-500 text-sm">
            Construído y desarrollado por <a class="font-medium" href="https://x.com/coderdiaz" rel="noreferrer">@coderdiaz</a>
          </p>
          <p class="text-sm text-gray-400">Desde &copy; 2024.</p>
        </div>
      </Container>
    </footer>
  </body>
</html>